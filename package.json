{
  "name": "sandlot-picks-analytics",
  "version": "0.1.0",
  "homepage": "https://www.sandlotpicks.com",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-ga4": "^2.1.0",
    "react-google-recaptcha": "^3.1.0",
    "react-router-dom": "^7.9.5",
    "react-scripts": "5.0.1",
    "react-snap": "^1.23.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "node server/google-cloud-api/reCaptcha.js",
    "predeploy": "npm run organize-articles && npm run build",
    "deploy": "gh-pages -d build",
    "organize-articles": "node scripts/manageArticles.js",
    "postbuild": "react-snap"
  },
  "reactSnap": {
    "inlineCss": true,
    "skipThirdPartyRequests": true,
    "cacheAjaxRequests": false,
    "minifyHtml": {
      "collapseWhitespace": false,
      "removeComments": false
    },
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--disable-gpu",
      "--log-level=3"
    ],
    "puppeteerExecutablePath": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
    "crawl": true,
    "waitFor": 2000,
    "include": [
      "/",
      "/about",
      "/features",
      "/contact",
      "/glossary",
      "/faqs",
      "/how-to-use",
      "/responsible-gaming",
      "/blogs",
      "/sandlot-insider",
      "/data-science",
      "/terms-of-use",
      "/privacy-policy"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^6.3.0"
  }
}
